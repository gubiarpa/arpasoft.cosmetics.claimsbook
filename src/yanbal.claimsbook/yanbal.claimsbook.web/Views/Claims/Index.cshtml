        <!-- Apellido Paterno -->
        <div class="mb-2 col-md-6">
            <label for="textClaimerName" class="yanbal-label">Apellido Paterno</label>
            <input type="text" class="form-control text-capitalize" id="textGuardSurnameFather" placeholder="Apellido Paterno" maxlength="200" disabled>
        </div>
        <!-- Apellido Materno -->
