        </div>
        <!-- Descripción -->
        <div class="col-md-6">
            <label for="textDescription" class="yanbal-label">Descripción</label>
            <input type="text" class="form-control" id="textDescription" placeholder="Descripción">
        </div>
    </div>
    <button name="btnContinue" data-parentForm="contractedGoodForm" data-nextForm="claimDetailForm" class="btn btn-primary col-md-6 offset-md-3" disabled="disabled">
